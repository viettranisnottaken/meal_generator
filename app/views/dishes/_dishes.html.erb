<% @dishes.each_with_index do |dish, index| %>
  <div class="card">
    <div class="card-body">
      <b><%= index + 1 %>.</b>
      <span><%= dish.name %></span>

      <span class="float-right">
        <%= link_to "| #{t(".edit")} ", edit_dish_path(dish), remote: true %>
      </span>
      <span class="float-right">
        <%= link_to "#{t(".delete")} |", dish_path(dish), method: :DELETE, remote: true %>
      </span>
    </div>
  </div>
<% end %>